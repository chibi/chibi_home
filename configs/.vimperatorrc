"" nicontroller.js
map ,ni :nicoinfo
map ,np :nicopause
map ,nm :nicomute
map ,nv :nicommentvisible
map ,nz :nicosize
map ,ns :nicoseek

javascript <<EOM
// [N];n-
// N 秒前にシークする。
// 指定なしの場合 10 秒前。
liberator.modules.mappings.addUserMap(
    [liberator.modules.modes.NORMAL],
    [';n-'],
    'seek by count backward',
    function(count) {
        if(count === -1) count = 10;
        liberator.execute(':nicoseek! ' + '-' + count);
    },
    { flags: liberator.modules.Mappings.flags.COUNT }
);

// [N];n+
// N 秒後にシークする。
// 指定なしの場合 10 秒後。
liberator.modules.mappings.addUserMap(
    [liberator.modules.modes.NORMAL],
    [';n+'],
    'seek by count forward',
    function(count) {
        if(count === -1) count = 10;
        liberator.execute(':nicoseek! ' + count);
    },
    { flags: liberator.modules.Mappings.flags.COUNT }
);
EOM
